<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
  <h1 class="h2">Skills</h1>
  <div class="btn-toolbar mb-2 mb-md-0">
    <div class="btn-group mr-2">
      <%= link_to 'New', [:new, :admin, :skill], class: 'btn btn-sm btn-outline-secondary' %>
    </div>
  </div>
</div>

<div>
  <p id="notice"><%= notice %></p>
</div>

<div class="table-responsive">
  <table class="table table-striped table-sm">
    <thead>
      <tr>
        <th>Name</th>
        <th>Language</th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% @skills.each do |skill| %>
        <tr>
          <td><%= link_to skill.name, [:edit, :admin, skill] %></td>
          <td><%= locale_to_language(skill.locale) %></td>
          <td>
            <%= link_to t(:edit), [:edit, :admin, skill], class: 'btn btn-sm btn-primary' %>
            <%= link_to t(:destroy), [:admin, skill], class: 'btn btn-sm btn-danger', method: :delete, data: { confirm: 'Are you sure?' } %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

